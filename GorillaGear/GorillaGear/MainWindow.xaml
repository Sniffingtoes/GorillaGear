<Window x:Class="GorillaGear.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GorillaGear"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Background" Value="#FF0E0E0E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1C1C1C"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SquareModButton" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Width" Value="130"/>
            <Setter Property="Height" Value="90"/>
            <Setter Property="Background" Value="#FF111111"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF222222"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="6"/>
            <Setter Property="Background" Value="#222"/>
            <Setter Property="Foreground" Value="#33CCFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="{TemplateBinding Background}">
                            <Track Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Background="{TemplateBinding Foreground}">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="3"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#FF000000" SnapsToDevicePixels="True" Padding="1">
        <Grid>
            
            <Border x:Name="TopBar" Background="#FF0A0A0A" Height="52" VerticalAlignment="Top" MouseDown="TopBar_MouseDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="GorillaGear" VerticalAlignment="Center" Margin="16,0,0,0" Foreground="#33CCFF" FontWeight="Bold" FontSize="16"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0">
                        <Button Content="–" Width="48" Height="36" Click="Minimize_Click" Style="{StaticResource RoundedButton}" Margin="0,0,6,0"/>
                        <Button Content="X" Width="48" Height="36" Click="Close_Click" Style="{StaticResource RoundedButton}" Background="#FF1C1C1C"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Margin="0,60,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="380"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="20">
                    <TextBlock Text="GorillaGear" FontSize="28" FontWeight="Bold" Foreground="#33CCFF" Margin="0,0,0,18"/>

                    <Grid Margin="0,0,0,12" VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Game Folder:" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0" Grid.Column="0"/>

                        <TextBox x:Name="txtGtPath"
                                 Grid.Column="1"
                                 Height="32"
                                 VerticalAlignment="Center"
                                 IsReadOnly="True"
                                 Background="#FF0E0E0E"
                                 Foreground="White"
                                 BorderBrush="#222"
                                 BorderThickness="1"
                                 Padding="6,2"/>

                        <Button Content="Browse"
                                Grid.Column="2"
                                Width="90"
                                Height="32"
                                Click="Browse_Click"
                                Style="{StaticResource RoundedButton}"
                                Margin="10,0,0,0"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Install BepInEx" Width="150" Height="36" Click="InstallBepInEx_Click" Style="{StaticResource RoundedButton}"/>
                        <Button Content="Repair Core" Width="120" Height="36" Click="RepairCore_Click" Style="{StaticResource RoundedButton}" Margin="10,0,0,0"/>
                    </StackPanel>

                    <ScrollViewer VerticalScrollBarVisibility="Visible"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Background="Transparent"
                                  Height="400"
                                  PanningMode="VerticalOnly">
                        <WrapPanel x:Name="modButtonsPanel" Orientation="Horizontal"/>
                    </ScrollViewer>
                </StackPanel>

                <Border x:Name="infoPanel" Grid.Column="1" Background="#FF0E0E0E" CornerRadius="12" Padding="20" Margin="20" Visibility="Collapsed">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="txtModName" FontSize="22" FontWeight="Bold" Foreground="#33CCFF" Grid.Row="0"/>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="txtModDesc" TextWrapping="Wrap" Foreground="White"/>
                        </ScrollViewer>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="Install" Width="120" Height="36" Click="InstallMod_Click" x:Name="btnInstall" Style="{StaticResource RoundedButton}"/>
                            <Button Content="Close" Width="100" Height="36" Click="CloseInfo_Click" Margin="10,0,0,0" Style="{StaticResource RoundedButton}"/>
                            <TextBlock x:Name="txtInstallStatus" VerticalAlignment="Center" Foreground="#FFAAAAAA" Margin="12,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <ProgressBar x:Name="progressBar" Grid.Column="1" Height="6" Margin="20" VerticalAlignment="Bottom" Visibility="Collapsed" IsIndeterminate="True" Foreground="#33CCFF"/>
                <TextBlock x:Name="txtStatus" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Foreground="#FFAAAAAA"/>
            </Grid>
        </Grid>
    </Border>
</Window>
