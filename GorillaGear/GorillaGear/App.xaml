<Application x:Class="GorillaGear.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF00D1FF"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="ButtonBg" Color="#FF2A2A2A"/>
        <SolidColorBrush x:Key="ButtonHover" Color="#FF00D1FF"/>
        <SolidColorBrush x:Key="ButtonPressed" Color="#FF1A1A1A"/>
        <SolidColorBrush x:Key="PanelBg" Color="#FF1E1E1E"/>
        <SolidColorBrush x:Key="InstalledCheck" Color="#FF4CAF50"/>
    </Application.Resources>
</Application>